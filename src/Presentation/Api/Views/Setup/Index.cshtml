@model Api.Models.DbConnectionSetup
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Setup";
}
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Setup" asp-action="Migrate" method="post">
            <div class="form-group">
                <label asp-for="Hostname" class="control-label"></label>
                <input asp-for="Hostname" type="text" placeholder="Hostname" />
                <span asp-validation-for="Hostname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Database" class="control-label"></label>
                <input asp-for="Database" type="text" placeholder="Database" />
                <span asp-validation-for="Database" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Port" class="control-label"></label>
                <input asp-for="Port" type="text" placeholder="Port" />
                <span asp-validation-for="Port" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" type="text" placeholder="User Id" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

